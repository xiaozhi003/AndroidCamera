<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidCamera.NoActionBar"
        tools:targetApi="31">

        <activity
            android:name=".camera_activity.SurfaceCameraActivity"
            android:exported="false" />
        <activity
            android:name=".camera_activity.TextureCameraActivity"
            android:exported="false" />
        <activity
            android:name=".camera_activity.GLTextureCameraActivity"
            android:exported="false" />
        <activity
            android:name=".camera_activity.GLSurfaceCameraActivity"
            android:exported="false" />
        <activity
            android:name=".camera2_activity.SurfaceCamera2Activity"
            android:exported="false" />
        <activity
            android:name=".camera2_activity.TextureCamera2Activity"
            android:exported="false" />
        <activity
            android:name=".camera2_activity.GLSurfaceCamera2Activity"
            android:exported="false" />
        <activity
            android:name=".camera2_activity.GLTextureCamera2Activity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AndroidCamera">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>